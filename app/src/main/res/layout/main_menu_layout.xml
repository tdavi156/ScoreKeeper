<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainMenu"
    android:background="#55607e">

    <TextView
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="Player 1"
        android:id="@+id/player_one_text_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#5ca188"
        android:textSize="14pt"
        android:gravity="center"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:longClickable="true"
        android:textColor="#2c2c2c" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="Player 2"
        android:id="@+id/player_two_text_view"
        android:layout_alignParentTop="true"
        android:background="#5ca188"
        android:gravity="center"
        android:textSize="14pt"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:longClickable="true"
        android:textColor="#2c2c2c" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="210dp"
        android:id="@+id/player_one_score_text_view"
        android:layout_below="@+id/player_one_text_view"
        android:layout_alignStart="@+id/player_one_text_view"
        android:clickable="true"
        android:background="#a1a1a1"
        android:gravity="center"
        android:textSize="40pt"
        android:text="0"
        android:longClickable="true" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="210dp"
        android:id="@+id/player_two_score_text_view"
        android:clickable="true"
        android:background="#a1a1a1"
        android:gravity="center"
        android:textSize="40pt"
        android:text="0"
        android:layout_below="@+id/player_two_text_view"
        android:layout_alignStart="@+id/player_two_text_view"
        android:longClickable="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="62dp"
        android:text="Save Score"
        android:id="@+id/save_score_button"
        android:textSize="10pt"
        android:layout_above="@+id/reset_score_button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="62dp"
        android:text="Reset Score"
        android:id="@+id/reset_score_button"
        android:textSize="10pt"
        android:layout_above="@+id/score_history_button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="62dp"
        android:text="Score History"
        android:id="@+id/score_history_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="10pt" />

</RelativeLayout>
